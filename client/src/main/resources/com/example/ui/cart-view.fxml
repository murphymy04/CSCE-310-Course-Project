<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.CartController"
      spacing="15"
      style="-fx-padding: 20;">

    <Label text="Shopping Cart"
           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TableView fx:id="cartTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="titleCol" text="Title" prefWidth="180" />
            <TableColumn fx:id="authorCol" text="Author" prefWidth="140" />
            <TableColumn fx:id="typeCol" text="Type" prefWidth="100" />
            <TableColumn fx:id="priceCol" text="Price" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Total:" style="-fx-font-size: 16px;" />
        <Label fx:id="totalLabel"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Clear Cart" onAction="#clearCart" />
        <Button text="Place Order" onAction="#placeOrder" />
        <Button text="Close" onAction="#closeWindow" />
    </HBox>

</VBox>
