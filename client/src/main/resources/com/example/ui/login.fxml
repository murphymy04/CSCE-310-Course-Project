<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.LoginController"
      alignment="CENTER"
      spacing="18"
      prefWidth="400"
      prefHeight="500"
      style="-fx-padding: 30;">
    
    <children>

        <Text text="Login"
              style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="300">

            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" />

            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password" />
        </VBox>

        <Button fx:id="loginButton"
                text="Login"
                prefWidth="200"
                onAction="#login"
                style="-fx-font-size: 16px;" />

        <Label fx:id="errorLabel" textFill="red" />

        <Hyperlink text="Don't have an account? Register"
                   onAction="#goToRegister" />

    </children>
</VBox>
