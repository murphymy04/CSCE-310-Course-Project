<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ui.ManagerBookModalController"
      spacing="12">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="authorLabel"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rent Price:"/>
        <TextField fx:id="rentPriceField" promptText="Enter rent price" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Buy Price:"/>
        <TextField fx:id="buyPriceField" promptText="Enter buy price" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Currently Rented:"/>
        <CheckBox fx:id="rentedCheckBox"/>
    </HBox>

    <Separator/>

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Save" prefWidth="120" onAction="#onSave"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="cancelButton" text="Cancel" prefWidth="120" onAction="#handleCancel"/>
        <Button fx:id="deleteButton" text="Delete" prefWidth="120" onAction="#handleDelete"/>
    </HBox>

</VBox>
