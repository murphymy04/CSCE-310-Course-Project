<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ui.ManagerOrdersController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="Order History" style="-fx-font-size: 20px;"/>
                <Button fx:id="paidButton" text="Mark Selected Paid" onAction="#markSelectedPaid"/>
                <Button fx:id="bookButton" text="Book Inventory" onAction="#redirectBookView" />
                <Button fx:id="logoutButton" text="Logout" onAction="#logout"/>
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="ordersTable"/>
    </center>

</BorderPane>
