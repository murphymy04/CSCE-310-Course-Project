<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.RegisterController"
      prefWidth="400"
      prefHeight="500">
      

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Create Account" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <HBox spacing="8" alignment="CENTER_LEFT">
        <CheckBox fx:id="managerCheckBox" />
        <Label text="Manager?" />
    </HBox>

    <Button text="Register" onAction="#register" maxWidth="200" />

    <Hyperlink text="Back to Login" onAction="#goToLogin"/>

    <Label fx:id="errorLabel" textFill="red" />
</VBox>
