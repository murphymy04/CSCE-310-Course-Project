<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ui.SearchController">

    <!-- Top search bar -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <children>
                <TextField fx:id="searchField"
                           promptText="Enter keyword..."
                           HBox.hgrow="ALWAYS"/>

                <Button fx:id="searchButton"
                        text="Search"
                        prefWidth="120"/>
            </children>
        </HBox>
    </top>

    <!-- Table displaying book results -->
    <center>
        <TableView fx:id="resultsTable">

            <columns>

                <TableColumn fx:id="titleColumn"
                             text="Title"
                             prefWidth="200"/>

                <TableColumn fx:id="authorColumn"
                             text="Author"
                             prefWidth="160"/>

                <TableColumn fx:id="rentPriceColumn"
                             text="Rent Price"
                             prefWidth="120"/>

                <TableColumn fx:id="buyPriceColumn"
                             text="Buy Price"
                             prefWidth="120"/>

                <TableColumn fx:id="rentedColumn"
                             text="Rented?"
                             prefWidth="90"/>

            </columns>

        </TableView>
    </center>

</BorderPane>
